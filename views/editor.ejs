<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editor - Quicky</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <div id="editorContainer">
        <h1>Editor for Code: <%= quickyCode %></h1>
        <div>
            <button id="viewButton">View</button>
            <button id="editButton">Edit</button>
            <button id="saveButton">Save</button>
        </div>
        <textarea id="editorTextArea" rows="20" style="width: 100%;"><%= content %></textarea>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="/scripts/script.js"></script>
    <script>
        document.getElementById('editButton').addEventListener('click', () => {
            document.getElementById('editorTextArea').disabled = false;
        });

        document.getElementById('saveButton').addEventListener('click', async () => {
            const content = document.getElementById('editorTextArea').value;
            const quickyCode = '<%= quickyCode %>';
            
            const response = await fetch('/save', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ quickyCode, content })
            });

            if (response.ok) {
                alert('Saved successfully!');
                window.location.href = '/';
            } else {
                alert('Failed to save.');
            }
        });

        document.getElementById('viewButton').addEventListener('click', () => {
            // Logic to fetch and display note content
        });
    </script>
</body>
</html>
